        "def validar_rango():\n",
        "    while True:\n",
        "        numero_str = input(\"Introduce un n칰mero entre 1 y 10: \")\n",
        "\n",
        "        # Verificar que la entrada es num칠rica\n",
        "        if numero_str.isdigit():\n",
        "            numero = int(numero_str)\n",
        "\n",
        "            # Verificar si el n칰mero est치 en el rango de 1 a 10\n",
        "            if 1 <= numero <= 10:\n",
        "                print(\"El n칰mero est치 dentro del rango.\")\n",
        "                break  # Salir del bucle si el n칰mero es v치lido\n",
        "            else:\n",
        "                print(\"Error: El n칰mero est치 fuera del rango. Debe estar entre 1 y 10.\")\n",
        "        else:\n",
        "            print(\"Error: Debes ingresar un n칰mero v치lido.\")\n",
        "\n",
        "# Llamada a la funci칩n\n",
        "validar_rango()\n"
